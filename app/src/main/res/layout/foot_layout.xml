<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_height="@dimen/title_height">

    <TextView
        android:id="@+id/mFootTvMusic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableTop="@mipmap/icon_music"
        android:gravity="center"
        android:text="@string/string_music"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mFootTvSetting" />

    <TextView
        android:id="@+id/mFootTvSetting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableTop="@mipmap/icon_setting"
        android:gravity="center"
        android:text="@string/string_setting"
        app:layout_constraintLeft_toRightOf="@id/mFootTvMusic"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>