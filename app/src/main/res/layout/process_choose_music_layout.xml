<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_radius_bg">

    <ImageView
        android:id="@+id/mIvProcess"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_height"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mTvProcessMusicName"
        android:layout_width="0dp"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:text="Around The World"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/mIvProcess"
        app:layout_constraintLeft_toRightOf="@id/mIvProcess"
        app:layout_constraintRight_toLeftOf="@id/mIvProcessRight"
        app:layout_constraintTop_toTopOf="@id/mIvProcess" />

    <ImageView
        android:id="@+id/mIvProcessRight"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_marginRight="8dp"
        android:src="@mipmap/icon_right"
        app:layout_constraintBottom_toBottomOf="@id/mIvProcess"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mIvProcess" />

</android.support.constraint.ConstraintLayout>